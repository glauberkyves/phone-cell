{% extends 'BaseBaseBundle::layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Cadastrar usuário
                </header>
                <div class="panel-body">
                    <div class="position-center">
                        <form role="form" class="" method="post" action="{{ path('super_usuario_create') }}">
                            <div class="form-group">
                                <div class="input-group m-bot15">
                                    <span class="input-group-addon btn-primary">@</span>
                                    <input type="text" class="form-control required email" id="noEmail" name="noEmail" placeholder="E-mail">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group m-bot15">
                                    <span class="input-group-addon btn-primary"><span
                                                class="fa fa-lock"></span></span>
                                    <input type="password" class="form-control required" id="noSenha" name="noSenha" placeholder="Senha">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group m-bot15">
                                    <span class="input-group-addon btn-primary"><span
                                                class="fa fa-user"></span></span>
                                    <input type="text" class="form-control required" id="noPessoa" name="noPessoa" placeholder="Nome completo">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail1"
                                       class="col-lg-6 col-sm-6 control-label">Situação</label>

                                <select name="stAtivo" id="stAtivo" class="form-control required">
                                    <option value="">Selecione...</option>
                                    <option value="1">Ativo</option>
                                    <option value="0">Inativo</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Perfis</label>

                                <div class="col-md-9">
                                    <select multiple="multiple" class="multi-select required" id="perfis"
                                            name="perfis[]">
                                        <option>Dallas Cowboys</option>
                                        <option>New York Giants</option>
                                        <option>Philadelphia Eagles</option>
                                        <option>Washington Redskins</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group pull-right">
                                <button type="submit" class="btn btn-info">Salvar</button>
                            </div>

                        </form>
                    </div>

                </div>
            </section>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#perfis').multiSelect({
                selectableOptgroup: true
            });
        });
    </script>
{% endblock %}