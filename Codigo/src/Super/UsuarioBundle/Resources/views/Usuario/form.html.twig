<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Cadastrar usuário
            </header>
            <div class="panel-body">
                <div class="position-center">
                    <form role="form" class="form-horizontal" method="post">

                        <div class="form-group">
                            <label for="noPessoa" class="col-lg-2 col-sm-2 control-label">Nome</label>

                            <div class="col-lg-10">
                                <div class="input-group m-bot15">
                                        <span class="input-group-addon btn-primary"><span
                                                    class="fa fa-user"></span></span>
                                    {{ formText('noPessoa', entity.idPessoa.noPessoa, {placeholder: 'Nome completo', class: 'form-control required'}) }}
                                    {{ formHidden('idUsuario', entity.idUsuario, {placeholder: 'Nome completo', class: 'form-control required'}) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="noPessoa" class="col-lg-2 col-sm-2 control-label">E-mail</label>

                            <div class="col-lg-10">
                                <div class="input-group m-bot15">
                                    <span class="input-group-addon btn-primary">@</span>
                                    {{ formText('noEmail', entity.noEmail, {placeholder: 'E-mail para acesso ao sistema', class: 'form-control required email'}) }}
                                </div>
                            </div>
                        </div>

                        {% if entity.getIdUsuario is null %}
                            <div class="form-group">
                                <label for="noPessoa" class="col-lg-2 col-sm-2 control-label">Senha</label>

                                <div class="col-lg-10">
                                    <div class="input-group m-bot15">
                                        <span class="input-group-addon btn-primary"><span
                                                    class="fa fa-lock"></span></span>
                                        {{ formText('noSenha', '', {placeholder: 'Senha para acesso ao sistema', class: 'form-control required'}) }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <label for="noPessoa" class="col-lg-2 col-sm-2 control-label">Interno</label>

                            <div class="col-lg-10">
                                {{ formSelect('stInterno', entity.stInterno, {'class': 'form-control required'}, {
                                    '1': 'Sim',
                                    '0': 'Não'
                                }) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="noPessoa" class="col-lg-2 col-sm-2 control-label">Situação</label>

                            <div class="col-lg-10">
                                {{ formSelect('stAtivo', entity.stAtivo, {'class': 'form-control required'}, cmbStAtivo) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Perfis" class="col-lg-2 col-sm-2 control-label">Perfis</label>

                            <div class="col-lg-10">
                                {{ formSelect('Perfis', perfis, {'class': 'multi-select required', 'multiple': 'multiple', 'id': 'perfis', 'name': 'perfis[]'}, cmbPerfis) }}
                            </div>
                        </div>

                        <div class="form-group pull-right">
                            <button type="submit" class="btn btn-primary"><span class="fa fa-save"></span> Salvar
                            </button>
                            <a href="{{ path('super_usuario') }}" class="btn btn-default"><span
                                        class="fa fa-times"></span> Cancelar</a>
                        </div>

                    </form>
                </div>

            </div>
        </section>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#perfis').multiSelect({
            selectableOptgroup: true
        });
    });
</script>