{% extends 'BaseBaseBundle::layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Cadastrar usuário
                </header>
                <div class="panel-body">
                    <div class="position-center">
                        <form role="form" class="form-horizontal" method="post" action="{{ path('super_usuario_create') }}">
                            <div class="form-group">
                                <div class="input-group m-bot15">
                                    <span class="input-group-addon btn-primary">@</span>
                                    <input type="text" class="form-control required email" id="noEmail" name="noEmail" placeholder="E-mail">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group m-bot15">
                                    <span class="input-group-addon btn-primary"><span
                                                class="fa fa-lock"></span></span>
                                    <input type="password" class="form-control required" id="noSenha" name="noSenha" placeholder="Senha">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group m-bot15">
                                    <span class="input-group-addon btn-primary"><span
                                                class="fa fa-user"></span></span>
                                    <input type="text" class="form-control required" id="noPessoa" name="noPessoa"
                                           placeholder="Nome completo">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="noPessoa" class="col-lg-2 col-sm-2 control-label">Situação</label>

                                <div class="col-lg-10">
                                    {{ formSelect('stAtivo', 1, {'class': 'form-control required'}, cmbStAtivo) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Perfis" class="col-lg-2 col-sm-2 control-label">Perfis</label>

                                <div class="col-lg-10">
                                    {{ formSelect('Perfis', 1, {'class': 'multi-select required', 'multiple': 'multiple', 'id': 'perfis', 'name': 'perfis[]'}, cmbStAtivo) }}
                                </div>
                            </div>

                            <div class="form-group pull-right">
                                <button type="submit" class="btn btn-info">Salvar</button>
                            </div>

                        </form>
                    </div>

                </div>
            </section>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#perfis').multiSelect({
                selectableOptgroup: true
            });
        });
    </script>
{% endblock %}