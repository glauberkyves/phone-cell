{% extends 'BaseBaseBundle::layout.html.twig' %}
{% block body %}
    <section class="panel">
        <header class="panel-heading">
            Editar Perfil
              <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
              </span>
        </header>
        <div class="panel-body">
            <form method="post" action="" id="form-cadastro" class="form-horizontal tasi-form">
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Perfil</label>

                    <div class="col-lg-10">
                        {{ formHidden('idPerfil', entity.idPerfil, {class: 'form-control required'}) }}
                        {{ formText('noPerfil', entity.noPerfil, {class: 'form-control required'}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Role</label>

                    <div class="col-lg-10">
                        {{ formText('', entity.sgPerfil, {class: 'form-control', disabled: 'disabled'}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i>
                            Salvar
                        </button>

                        <a href="{{ path('super_perfil') }}" class="btn btn-default">
                            <i class="fa fa-times"></i>
                            Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock %}