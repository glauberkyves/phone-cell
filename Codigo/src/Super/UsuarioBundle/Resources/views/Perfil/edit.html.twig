{% extends 'SuperBaseBundle::layout.html.twig' %}
{% block body %}
    <section class="panel">
        <header class="panel-heading">
            Editar Perfil
              <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
              </span>
        </header>
        <div class="panel-body">
            <form method="post" action="{{ path('super_usuario_perfil_edit') }}" id="form-cadastro" class="form-horizontal tasi-form">
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Perfil</label>

                    <div class="col-lg-10">
                        <input type="text" class="form-control required" id="noPerfil" name="noPerfil" value="{{ entity.getNoPerfil() }}">
                        <input type="hidden" class="form-control required" id="idPerfil" name="idPerfil" value="{{ entity.getRlUsuarioPerfil() }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Situação</label>

                    <div class="col-lg-10">
                        <select class="form-control required" id="stAtivo" name="stAtivo">
                            <option value="">Selecione...</option>
                            <option value="0">Inativo</option>
                            <option value="1">Ativo</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i>
                            Salvar
                        </button>

                        <a href="{{ path('super_usuario_perfil') }}" class="btn btn-default">
                            <i class="fa fa-times"></i>
                            Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock %}