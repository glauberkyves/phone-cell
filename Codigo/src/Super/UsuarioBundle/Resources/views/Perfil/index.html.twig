{% extends 'BaseBaseBundle::layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Pesquisar Perfil
                </header>
                <div class="panel-body">
                    <div class="position-center">
                        <form role="form" class="form-horizontal" action="{{ path('super_perfil') }}"
                              id="form-perfil">
                            <div class="form-group">
                                <label for="noPerfil" class="col-lg-2 col-sm-2 control-label">Perfil</label>

                                <div class="col-lg-10">
                                    <div class="input-group m-bot15">
                                    <span class="input-group-addon btn-primary"><span
                                                class="fa fa-user"></span></span>
                                        {{ formText('noPerfil', '', {'class': 'form-control'}) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="stAtivo" class="col-lg-2 col-sm-2 control-label">Situação</label>

                                <div class="col-lg-10">
                                    {{ formSelect('stAtivo', '', {'class': 'form-control'}, cmbStAtivo) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button type="submit" class="btn btn-primary">
                                        <span class="fa fa-search"></span> Pesquisar
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>

            <section class="panel">
                <header class="panel-heading">
                    Resultado da pequisa
              <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
              </span>
                </header>
                <div class="panel-body">
                    <section id="unseen">
                        <table class="table table-bordered table-striped table-condensed" data-grid="form-perfil">
                            <thead>
                            <tr>
                                <th data-column="noPerfil">Perfil</th>
                                <th data-column="stAtivo">Situação</th>
                                <th data-column="opcoes" width="10%">Opções</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="odd">
                                <td valign="top" colspan="3">Acione a pesquisa</td>
                            </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </section>
        </div>
    </div>
{% endblock %}