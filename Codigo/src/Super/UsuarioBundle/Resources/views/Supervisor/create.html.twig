{% extends 'BaseBaseBundle::layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Vincular Vendedores
                </header>
                <div class="panel-body">
                    <div class="position-center">
                        <form role="form" class="form-horizontal" method="post">

                            <div class="form-group">
                                <label for="noPessoa" class="col-lg-2 col-sm-2 control-label">Supervisor</label>

                                <div class="col-lg-10">
                                    <div class="input-group m-bot15">
                                        <span class="input-group-addon btn-primary"><span
                                                    class="fa fa-user"></span></span>
                                        {{ formText('noPessoa', entity.idPessoa.noPessoa, {
                                            placeholder: 'Nome completo',
                                            class: 'form-control ',
                                            disabled: 'disabled'
                                        }) }}
                                        {{ formHidden('idSupervisor', entity.idUsuario, {placeholder: 'Nome completo', class: 'form-control required'}) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Perfis" class="col-lg-2 col-sm-2 control-label">Vendedores</label>

                                <div class="col-lg-10">
                                    {{ formSelect('vendedores', vendedores, {'class': 'multi-select required', 'multiple': 'multiple', 'id': 'perfis', 'name': 'vendedores[]'}, cmbVendedores) }}
                                </div>
                            </div>

                            <div class="form-group pull-right">
                                <button type="submit" class="btn btn-primary"><span class="fa fa-save"></span> Salvar
                                </button>
                                <a href="{{ path('super_supervisor_vendedor') }}" class="btn btn-default"><span
                                            class="fa fa-times"></span> Cancelar</a>
                            </div>

                        </form>
                    </div>

                </div>
            </section>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#perfis').multiSelect({
                selectableOptgroup: true
            });
        });
    </script>
{% endblock %}