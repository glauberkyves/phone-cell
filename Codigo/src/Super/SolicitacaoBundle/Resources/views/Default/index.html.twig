{% extends 'BaseBaseBundle::layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Basic Wizard
                        <span class="tools pull-right">
                            <a class="fa fa-chevron-down" href="javascript:;"></a>
                            <a class="fa fa-cog" href="javascript:;"></a>
                            <a class="fa fa-times" href="javascript:;"></a>
                         </span>
                </header>
                <div class="panel-body">

                    <div id="wizard" role="application" class="wizard clearfix">
                        <div class="steps clearfix">
                            <ul role="tablist">
                                <li role="tab" class="first done" aria-disabled="false" aria-selected="false"><a
                                            aria-controls="wizard-p-0" href="#wizard-h-0" id="wizard-t-0"><span
                                                class="number">1.</span> Dados BÃ¡sicos</a></li>
                                <li role="tab" class="current" aria-disabled="false" aria-selected="true"><a
                                            aria-controls="wizard-p-1" href="#wizard-h-1" id="wizard-t-1"><span
                                                class="current-info audible">current step: </span><span class="number">2.</span>
                                        Second Step</a></li>
                                <li role="tab" class="done" aria-disabled="false" aria-selected="false"><a
                                            aria-controls="wizard-p-2" href="#wizard-h-2" id="wizard-t-2"><span
                                                class="number">3.</span> Third Step</a></li>
                                <li role="tab" class="disabled last" aria-disabled="true"><a aria-controls="wizard-p-3"
                                                                                             href="#wizard-h-3"
                                                                                             id="wizard-t-3"><span
                                                class="number">4.</span> Final Step</a></li>
                            </ul>
                        </div>
                        <div class="content clearfix">
                            <h2 id="wizard-h-0" tabindex="-1" class="title">First Step</h2>

                            <section id="wizard-p-0" role="tabpanel" aria-labelledby="wizard-h-0" class="body"
                                     style="display: none; left: -201px;" aria-hidden="true">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Full Name</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="Full Name" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Email Address</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="Email Address" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">User Name</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="Username" class="form-control">
                                        </div>
                                    </div>
                                </form>
                            </section>

                            <h2 id="wizard-h-1" tabindex="-1" class="title current">Second Step</h2>
                            <section id="wizard-p-1" role="tabpanel" aria-labelledby="wizard-h-1" class="body current"
                                     style="display: block; left: 0px;" aria-hidden="false">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Phone</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="Phone" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Mobile</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="Mobile" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Address</label>

                                        <div class="col-lg-8">
                                            <textarea rows="5" cols="60" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </form>
                            </section>

                            <h2 id="wizard-h-2" tabindex="-1" class="title">Third Step</h2>
                            <section id="wizard-p-2" role="tabpanel" aria-labelledby="wizard-h-2" class="body"
                                     style="display: none; left: 201px;" aria-hidden="true">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Bill Name 1</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="Phone" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Bill Name 2</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="Mobile" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Status</label>

                                        <div class="col-lg-8">
                                            <textarea rows="5" cols="60" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </form>
                            </section>

                            <h2 id="wizard-h-3" tabindex="-1" class="title">Final Step</h2>
                            <section id="wizard-p-3" role="tabpanel" aria-labelledby="wizard-h-3" class="body"
                                     style="display: none;" aria-hidden="true">
                                <p>Congratulations This is the Final Step</p>
                            </section>
                        </div>
                        <div class="actions clearfix">
                            <ul aria-label="Pagination" role="menu">
                                <li class="" aria-disabled="false"><a role="menuitem" href="#previous">Previous</a></li>
                                <li aria-hidden="false" aria-disabled="false"><a role="menuitem" href="#next">Next</a>
                                </li>
                                <li style="display: none;" aria-hidden="true"><a role="menuitem"
                                                                                 href="#finish">Finish</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}