                                            <input type="email" class="form-control" id="inputEmail1" placeholder="99/99/9999">
                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail1" class="col-lg-6 col-sm-6 control-label">Sexo</label>

                                            <select class="form-control m-bot15">
