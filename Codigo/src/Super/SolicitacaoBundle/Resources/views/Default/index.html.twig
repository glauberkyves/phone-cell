                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail1" class="col-lg-6 col-sm-6 control-label">Nascionalidade</label>

                                            <input type="email" class="form-control" id="inputEmail1" placeholder="">
                                        </div>

                                    </div>
                                </div>
                            </section>

                            <h2>Contato</h2>
                            <section class="panel">
                                <div class="panel-body">
                                    <div class="">
                                        <div class="form-group">
                                            <label for="inputEmail1" class="col-lg-6 col-sm-6 control-label">Nome</label>

                                            <input type="email" class="form-control" id="inputEmail1" placeholder="Nome do contato">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail1" class="col-lg-6 col-sm-6 control-label">Telefone Fixo</label>

                                            <input type="email" class="form-control" id="inputEmail1" placeholder="(99) 9999-9999">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail1" class="col-lg-6 col-sm-6 control-label">Nome</label>

                                            <input type="email" class="form-control" id="inputEmail1"
                                                   placeholder="Nome do contato">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail1" class="col-lg-6 col-sm-6 control-label">Telefone Celular</label>

                                            <input type="email" class="form-control" id="inputEmail1" placeholder="(99) 9999-9999">
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <h2>Endereço</h2>
                            <section>
                                <div class="panel-body">
                                    <div class="">
                                        <div class="form-group">
                                            <label for="inputEmail1" class="col-lg-6 col-sm-6 control-label">CEP</label>

                                            <input type="email" class="form-control" id="inputEmail1" placeholder="99999-999">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail1" class="col-lg-6 col-sm-6 control-label">Estado</label>

                                            <select class="form-control m-bot15">
                                                <option>Goiás</option>
                                                <option>Distrito Federal</option>
