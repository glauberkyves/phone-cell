{% extends 'BaseBaseBundle::layout.html.twig' %}
{% block body %}
    <form method="post" action="{{ path('super_ordem_servico_configurar_comissao') }}" id="form-cadastro"
          class="form-horizontal tasi-form"
          novalidate="novalidate">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Supervisor
                    </header>
                    <div class="panel-body">
                        <section class="panel">
                            <div class="panel-body">
                                <div class="tab-content">
                                    {% for config in configuracao %}
                                        {% if config.getStInterno() == false and  config.getStComissaoSupervisor() == true %}
                                            <div class="form-group">
                                                <label class="col-sm-4 control-label col-lg-4"
                                                       for="inputSuccess">Comiss√£o por vendedor</label>

                                                <div class="input-group m-bot15 col-lg-2">
                                                    <span class="input-group-addon">$</span>
                                                    {{ formText('supervisor', config.getNuValor()|number_format(2, ',', '.'), {
                                                        class: 'form-control',
                                                        'data-mask': '99,99'
                                                    }) }}
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>

            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Equipe Interna
                    </header>
                    <div class="panel-body">
                        <section class="panel">
                            <header class="panel-heading tab-bg-dark-navy-blue ">
                                <ul class="nav nav-tabs">
                                    <li class="active">
                                        <a data-toggle="tab" href="#plano" aria-expanded="true">Oi FIXO</a>
                                    </li>
                                    <li class="">
                                        <a data-toggle="tab" href="#pacote" aria-expanded="false">Oi TV</a>
                                    </li>
                                    <li class="">
                                        <a data-toggle="tab" href="#velocidade" aria-expanded="false">Velocidade</a>
                                    </li>
                                </ul>
                            </header>
                            <div class="panel-body">
                                <div class="tab-content">
                                    <div id="plano" class="tab-pane active">
                                        {% for config in configuracao %}
                                            {% for plano in planos %}
                                                {% if config.getIdPlano() is not null
                                                and config.getIdPlano().getIdPlano() == plano.getIdPlano()
                                                and config.getStInterno() == true %}
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label col-lg-4"
                                                               for="inputSuccess">{{ plano.getNoPlano() }}</label>

                                                        <div class="input-group m-bot15 col-lg-2">
                                                            <span class="input-group-addon">$</span>
                                                            {{ formText('plano[interno][' ~ plano.getIdPlano() ~ ']', config.getNuValor()|number_format(2, ',', '.'), {
                                                                class: 'form-control',
                                                                'data-mask': '99,99'
                                                            }) }}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
                                    <div id="pacote" class="tab-pane">
                                        {% for config in configuracao %}
                                            {% for pacote in pacotes %}
                                                {% if config.getIdPacote() is not null
                                                and config.getIdPacote().getIdPacote() == pacote.getIdPacote()
                                                and config.getStInterno() == true %}
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label col-lg-4"
                                                               for="inputSuccess">{{ pacote.getNoPacote() }}</label>

                                                        <div class="input-group m-bot15 col-lg-2">
                                                            <span class="input-group-addon">$</span>
                                                            {{ formText('pacote[interno][' ~ pacote.getIdPacote() ~ ']', config.getNuValor()|number_format(2, ',', '.'), {
                                                                class: 'form-control',
                                                                'data-mask': '99,99'
                                                            }) }}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
                                    <div id="velocidade" class="tab-pane">
                                        {% for config in configuracao %}
                                            {% for velocidade in velocidades %}
                                                {% if config.getIdVelocidade() is not null
                                                and config.getIdVelocidade().getIdVelocidade() == velocidade.getIdVelocidade()
                                                and config.getStInterno() == true %}
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label col-lg-4"
                                                               for="inputSuccess">{{ velocidade.getNoVelocidade() }}</label>

                                                        <div class="input-group m-bot15 col-lg-2">
                                                            <span class="input-group-addon">$</span>
                                                            {{ formText('velocidade[interno][' ~ velocidade.getIdVelocidade() ~ ']', config.getNuValor()|number_format(2, ',', '.'), {
                                                                class: 'form-control',
                                                                'data-mask': '99,99'
                                                            }) }}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>

            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Equipe Externa
                    </header>
                    <div class="panel-body">
                        <section class="panel">
                            <header class="panel-heading tab-bg-dark-navy-blue ">
                                <ul class="nav nav-tabs">
                                    <li class="active">
                                        <a data-toggle="tab" href="#plano-externo" aria-expanded="true">Oi FIXO</a>
                                    </li>
                                    <li class="">
                                        <a data-toggle="tab" href="#pacote-externo" aria-expanded="false">Oi TV</a>
                                    </li>
                                    <li class="">
                                        <a data-toggle="tab" href="#velocidade-externo"
                                           aria-expanded="false">Velocidade</a>
                                    </li>
                                </ul>
                            </header>
                            <div class="panel-body">
                                <div class="tab-content">
                                    <div id="plano-externo" class="tab-pane active">
                                        {% for config in configuracao %}
                                            {% for plano in planos %}
                                                {% if config.getIdPlano() is not null
                                                and config.getIdPlano().getIdPlano() == plano.getIdPlano()
                                                and config.getStInterno() == false %}
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label col-lg-4"
                                                               for="inputSuccess">{{ plano.getNoPlano() }}</label>

                                                        <div class="input-group m-bot15 col-lg-2">
                                                            <span class="input-group-addon">$</span>
                                                            {{ formText('plano[externo][' ~ plano.getIdPlano() ~ ']', config.getNuValor()|number_format(2, ',', '.'), {
                                                                class: 'form-control',
                                                                'data-mask': '99,99'
                                                            }) }}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
                                    <div id="pacote-externo" class="tab-pane ">
                                        {% for config in configuracao %}
                                            {% for pacote in pacotes %}
                                                {% if config.getIdPacote() is not null
                                                and config.getIdPacote().getIdPacote() == pacote.getIdPacote()
                                                and config.getStInterno() == false %}
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label col-lg-4"
                                                               for="inputSuccess">{{ pacote.getNoPacote() }}</label>

                                                        <div class="input-group m-bot15 col-lg-2">
                                                            <span class="input-group-addon">$</span>
                                                            {{ formText('pacote[externo][' ~ pacote.getIdPacote() ~ ']', config.getNuValor()|number_format(2, ',', '.'), {
                                                                class: 'form-control',
                                                                'data-mask': '99,99'
                                                            }) }}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
                                    <div id="velocidade-externo" class="tab-pane">
                                        {% for config in configuracao %}
                                            {% for velocidade in velocidades %}
                                                {% if config.getIdVelocidade() is not null
                                                and config.getIdVelocidade().getIdVelocidade() == velocidade.getIdVelocidade()
                                                and config.getStInterno() == false %}
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label col-lg-4"
                                                               for="inputSuccess">{{ velocidade.getNoVelocidade() }}</label>

                                                        <div class="input-group m-bot15 col-lg-2">
                                                            <span class="input-group-addon">$</span>
                                                            {{ formText('velocidade[externo][' ~ velocidade.getIdVelocidade() ~ ']', config.getNuValor()|number_format(2, ',', '.'), {
                                                                class: 'form-control',
                                                                'data-mask': '99,99'
                                                            }) }}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                    Salvar
                </button>
            </div>
        </div>
    </form>

{% endblock %}