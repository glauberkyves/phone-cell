{% extends 'BaseBaseBundle::layout.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading tab-bg-dark-navy-blue">
                    <ul class="nav nav-tabs nav-justified ">
                        <li class="active">
                            <a data-toggle="tab" href="#job-history">
                                Hist√≥rico
                            </a>
                        </li>
                    </ul>
                </header>
                <div class="panel-body">
                    <div class="tab-content tasi-tab">
                        <div id="job-history" class="tab-pane active">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="timeline-messages">
                                        <h3>{{ entity.getIdTipoOrdemServico().getNoTipoOrdemServico() }}</h3>
                                        {% for historico in historicos %}
                                            <!-- Comment -->
                                            <div class="msg-time-chat">
                                                <div class="message-body msg-in">
                                                    <span class="arrow"></span>

                                                    <div class="text">
                                                        <div class="first" style="width: 90px !important;">
                                                            {{ historico.dtCadastro.format('d/m/Y H:i:s') }}
                                                        </div>
                                                        {% if historico.getIdSituacao().getIdSituacao() == 6
                                                        or historico.getIdSituacao().getIdSituacao() == 8 %}
                                                            {% set bg = 'bg-green' %}
                                                        {% elseif historico.getIdSituacao().getIdSituacao() == 4
                                                        or historico.getIdSituacao().getIdSituacao() == 5
                                                        or historico.getIdSituacao().getIdSituacao() == 7
                                                        or historico.getIdSituacao().getIdSituacao() == 9
                                                        or historico.getIdSituacao().getIdSituacao() == 10
                                                        or historico.getIdSituacao().getIdSituacao() == 11 %}
                                                            {% set bg = 'bg-red' %}
                                                        {% else %}
                                                            {% set bg = 'bg-terques' %}
                                                        {% endif %}

                                                        <div class="second {{ bg }}">
                                                            {{ historico.getIdUsuario().getIdPessoa().getNoPessoa() }}
                                                            -
                                                            {{ historico.getIdSituacao().getNoSituacao() }}
                                                        </div>
                                                        <div class="second"
                                                             style="background: none !important; color:rgb(110, 111, 111) !important">
                                                            <b>{{ historico.getDsObservacao() }}</b>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                        <!-- /comment -->
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <br/>
                                    <br/>
                                    <a href="javascript: history.back();" class="btn btn-default"><span
                                                class="fa fa-times"></span> Voltar</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <script>
        $(document).ready(function () {
//            $('button[type=submit]').click()
        });
    </script>
{% endblock %}